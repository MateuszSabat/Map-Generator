#pragma kernel CSEditHumidity

RWBuffer<float> humidity;
Buffer<float> height;
uint size;

[numthreads(8,8,1)]
void CSEditHumidity(uint3 id : SV_DispatchThreadID)
{
	if (id.x >= size || id.y >= size)
		return;

	int i = id.x * size + id.y;

	float h = saturate(humidity[i] * 3 - 1.0f - (height[i] * 0.5f));
	humidity[i] = h;
}
